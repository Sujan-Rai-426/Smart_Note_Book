

{
    "version": 2,
    "builds": [
        {
            "src": "Frontend_react/package.json",
            "use": "@vercel/static-build" 
        },
        {
            "src": "Backend_django/manage.py",
            "use": "@vercel/python"  
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "Frontend_react/src/main.jsx"
            },
        {
            "source": "/api/(.*)",
            "destination": "Backend_django/$1"
        }
    ]

}
