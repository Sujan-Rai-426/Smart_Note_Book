

{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
        "use": "@vercel/static-build" 
        },
        {
            "src": "Backend/manage.py",
            "use": "@vercel/python"  
        }
    ],
    "env": {
        "DATABASE_URL": "@database_url",  
        "SECRET_KEY": "@secret_key",    
        "DEBUG": "false"
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
            },
        {
            "src": "/api/(.*)",
            "dest": "Backend/$1"
        }
    ]
}
